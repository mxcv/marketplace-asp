@model Marketplace.Dto.ItemDto
@inject IViewLocalizer Localizer

<div class="d-flex shadow rounded p-2">
	<a asp-controller="Home" asp-action="Index" asp-route-id="@Model.Id">
		@if(Model.Images.FirstOrDefault() == null)
		{
			<img class="item-image item-image-none" src="~/img/no-image.svg" alt="No item image" />
		}
		else
		{
			<img class="item-image rounded" src="@Url.Content(Model.Images.First().Path)" alt="Item image" />
		}
	</a>
	<div class="d-flex flex-column justify-content-between w-100 ms-3">
		<div class="d-flex justify-content-between">
			<a asp-controller="Home" asp-action="Index" asp-route-id="@Model.Id"><b>@Model.Title</b></a>
			@if (Model.Price != null)
			{
				<span class="ms-1">
					@if (Model.Currency != null)
					{
						<span class="currency-id d-none">@Model.Currency.Id</span>
					}
					<b>
						@(Model.Price.Value == 0
							? Localizer["Free"]
							: Model.Price.Value.ToString(System.Globalization.CultureInfo.InvariantCulture))
					</b>
				</span>
			}
		</div>
		<small>
			@if ((Model.User.City != null))
			{
				<span class="city-id d-none">@Model.User.City.Id</span>
				<span></span>
				<span>-</span>
			}
			<span class="time-iso d-none">@Model.Created.ToString("O")</span>
			<span></span>
		</small>
	</div>
</div>
